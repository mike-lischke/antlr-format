{
    "name": "antlr-format",
    "author": "Mike Lischke",
    "license": "MIT",
    "version": "1.0.0",
    "description": "A formatter for ANTLR grammars",
    "bin": {
        "antlr-format": "./dist/antlr-format.mjs"
    },
    "type": "module",
    "files": [
        "License.txt",
        "antlr-format.mjs"
    ],
    "scripts": {
        "generate": "antlr4ng -Dlanguage=TypeScript -no-visitor -no-listener -Xexact-output-dir grammars/LexBasic.g4 grammars/ANTLRv4Lexer.g4 -o src/parser",
        "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --no-coverage",
        "lint": "eslint --ext .ts .",
        "build": "tsc && esbuild ./src/antlr-format.js --main-fields=module,main --bundle --outfile=dist/antlr-format.mjs --platform=node --format=esm --sourcemap",
        "build-minified": "npm run build -- --minify",
        "build-watch": "npm run build -- --sourcemap --watch",
        "format-test": "node --no-warnings --experimental-vm-modules --loader ts-node/esm ./src/antlr-format.ts --pattern ../grammars-v4/**/ada*.g4 --config tests/config.json -a",
        "generate-configuration-schema": "./node_modules/.bin/ts-json-schema-generator --path 'src/types.ts' --type 'IConfiguration' > src/config-schema.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mike-lischke/antlr-format.git"
    },
    "keywords": [
        "antlr",
        "format",
        "grammar"
    ],
    "bugs": {
        "url": "https://github.com/mike-lischke/antlr-format/issues"
    },
    "homepage": "https://github.com/mike-lischke/antlr-format",
    "dependencies": {
        "@readme/better-ajv-errors": "1.6.0",
        "ajv": "8.12.0",
        "antlr4ng": "2.0.2",
        "commander": "11.1.0",
        "glob": "10.3.10"
    },
    "devDependencies": {
        "@types/jest": "29.5.8",
        "@types/node": "20.9.1",
        "@typescript-eslint/eslint-plugin": "6.10.0",
        "@typescript-eslint/parser": "6.10.0",
        "esbuild": "0.19.5",
        "eslint": "8.53.0",
        "eslint-plugin-import": "2.29.0",
        "eslint-plugin-jsdoc": "46.8.2",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "jest": "29.7.0",
        "ts-jest": "29.1.1",
        "ts-json-schema-generator": "1.4.0",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    }
}
