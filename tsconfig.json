{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Node16",
        "moduleResolution": "Node16",
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "lib": [
            "ESNext",
        ],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts",
        "cli/antlr-format.ts",
        "cli/process-options.ts",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests"
    ],
    "compileOnSave": true,
    "ts-node": {
        "esm": true
    },
}
