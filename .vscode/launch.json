{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run current Jest test",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--experimental-vm-modules",
                "${workspaceRoot}/node_modules/.bin/jest",
                "${fileBasenameNoExtension}.ts",
                "--no-coverage",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "smartStep": true,
            "trace": false,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug main index file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--no-warnings=ExperimentalWarning",
                "--loader",
                "ts-node/esm",
                "src/index.ts",
                "--source",
                "/Volumes/Extern/Work/projects/grammars-v4/acme/",
            ],
            "sourceMaps": true,
            "outputCapture": "std",
        }
    ]
}
